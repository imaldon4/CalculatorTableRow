<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/vertical_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText">


        <LinearLayout
            android:id="@+id/layoutLinear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="gravity">

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="2"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="3"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="gravity">

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="4"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="5"
                android:textAlignment="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="6"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="gravity">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="8"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_number_width"
                android:layout_height="@dimen/button_number_height"
                android:gravity="center_vertical"
                android:text="9"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="gravity">

            <TextView
                android:layout_width="@dimen/button_plus_width"
                android:layout_height="@dimen/button_plus_height"
                android:gravity="center_vertical"
                android:text="+"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_minus_width"
                android:layout_height="@dimen/button_minus_height"
                android:gravity="center_vertical"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_divide_width"
                android:layout_height="@dimen/button_divide_height"
                android:gravity="center_vertical"
                android:text="/"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/button_multiply_width"
                android:layout_height="@dimen/button_multiply_height"
                android:gravity="center_vertical"
                android:text="x"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/clear_zero_equals_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@id/vertical_linear_layout">

        <TextView
            android:layout_width="@dimen/button_c_width"
            android:layout_height="@dimen/button_c_height"
            android:gravity="center_vertical"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:layout_width="@dimen/button_number_width"
            android:layout_height="@dimen/button_number_height"
            android:gravity="center_vertical"
            android:text="."
            android:textAlignment="center" />

        <TextView
            android:layout_width="@dimen/button_equals_width"
            android:layout_height="@dimen/button_equals_height"
            android:gravity="center_vertical"
            android:text="="
            android:textAlignment="center" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>